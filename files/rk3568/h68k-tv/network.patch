+# 修复h68k-tv的网络配置
+fix_h68k_tv_network() {
+    # 检查是否为h68k-tv设备
+    if [ -f "/tmp/sysinfo/board_name" ] && grep -q "h68k-tv" /tmp/sysinfo/board_name; then
+        echo "检测到h68k-tv设备，进行网络配置修复..."
+        
+        # 1. 修复RTL8111F网卡驱动
+        if [ ! -f "/etc/modules.d/rtl8111f" ]; then
+            echo "创建RTL8111F网卡驱动配置..."
+            cat > /etc/modules.d/rtl8111f <<EOF
+# RTL8111F Gigabit Ethernet driver
+r8169
+EOF
+        fi
+        
+        # 2. 修复AP6275S SDIO WiFi配置
+        fix_ap6275s_wifi_config() {
+            local wifi_config="/etc/config/wireless"
+            local need_fix=0
+            
+            # 检查是否已经有正确的配置
+            if [ -f "$wifi_config" ]; then
+                # 检查是否有SDIO接口的配置
+                if ! grep -q "option.*type.*'mac80211'" "$wifi_config" 2>/dev/null; then
+                    need_fix=1
+                fi
+                if ! grep -q "mmcblk" "$wifi_config" 2>/dev/null; then
+                    need_fix=1
+                fi
+            else
+                need_fix=1
+            fi
+            
+            if [ $need_fix -eq 1 ]; then
+                echo "创建AP6275S SDIO WiFi配置..."
+                cat > "$wifi_config" <<EOF
+
+config wifi-device 'radio0'
+    option type 'mac80211'
+    option phy 'phy0'
+    option path 'platform/fe2b0000.dwmmc/mmc_host/mmc2/mmc2:0001/mmc2:0001:1'
+    option band '2g'
+    option htmode 'HT20'
+    option channel 'auto'
+    option country 'US'
+    option txpower '20'
+    option disabled '0'
+
+config wifi-iface 'default_radio0'
+    option device 'radio0'
+    option network 'lan'
+    option mode 'ap'
+    option ssid 'H68K-TV-WiFi'
+    option encryption 'psk2'
+    option key '12345678'
+
+EOF
+                echo "WiFi配置已更新"
+            fi
+        }
+        fix_ap6275s_wifi_config
+    fi
+}
 
